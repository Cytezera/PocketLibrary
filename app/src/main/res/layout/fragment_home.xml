<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAF3E0"
    android:padding="16dp">


    <TextView
        android:id="@+id/textWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="App title"
        android:text="Pocket Library"
        android:textAlignment="center"
        android:textColor="#5C4033"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quick actions"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:textColor="#8B4513"
        android:contentDescription="Quick actions section" />


    <LinearLayout
        android:id="@+id/quickActionsRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:weightSum="4">


        <LinearLayout
            android:id="@+id/actionDiscover"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_quick_action"
            android:contentDescription="Go to Discover"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:padding="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discover"
                android:textStyle="bold"
                android:textColor="#5C4033"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/actionSearch"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_quick_action"
            android:contentDescription="Go to Search"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:padding="8dp"
            android:layout_marginStart="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:textStyle="bold"
                android:textColor="#5C4033"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/actionLibrary"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_quick_action"
            android:contentDescription="Go to Your Library"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:padding="8dp"
            android:layout_marginStart="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Library"
                android:textStyle="bold"
                android:textColor="#5C4033"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/actionAdd"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_quick_action"
            android:contentDescription="Go to Add Book"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:padding="8dp"
            android:layout_marginStart="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create"
                android:textStyle="bold"
                android:textColor="#5C4033"/>
        </LinearLayout>
    </LinearLayout>



    <TextView
        android:id="@+id/textRecent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recently Saved"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:textColor="#5C4033"
        android:contentDescription="Recently saved section" />


    <TextView
        android:id="@+id/textEmpty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No saved books yet. Add one or search to get started."
        android:layout_marginTop="8dp"
        android:textColor="#8B4513"
        android:visibility="gone" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerRecent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:contentDescription="Recently saved books" />

</LinearLayout>
